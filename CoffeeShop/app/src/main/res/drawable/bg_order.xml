<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <solid android:color="#ffffff"/>
    <stroke
        android:color="#ffffff"
        android:width="1dp" />
    <corners
        android:radius="3dp"
        />
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        />
</shape>

