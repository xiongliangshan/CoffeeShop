<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="MyWidget.home.fragment_tab.btn" parent="@android:style/Theme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/selecter_index_btn_bg</item>
        <item name="android:textColor">@color/radiobutton_text_normal</item>
    </style>

    <style name="MyWidget.home.left_tab.btn" parent="@android:style/Theme">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@mipmap/ic_launcher</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/selecter_index_btn_bg</item>

    </style>

    <style name="MyWidget.pager.tab.btn" parent="@android:style/Theme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/pager_tab_bg</item>
        <item name="android:textColor">@color/radiobutton_text_normal</item>
    </style>
</resources>
