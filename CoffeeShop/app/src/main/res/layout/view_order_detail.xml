<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="CB2015-0919-01"
                />
            <TextView
                android:id="@+id/contant_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_id"
                android:layout_alignBaseline="@id/order_id"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="下单时间"
                />
            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/contant_order_time"
                android:layout_alignBaseline="@id/order_id"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="2015-09-19 14:20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="报告"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_background"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/contant_reach_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送达时间"
                    />
                <TextView
                    android:id="@+id/reach_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contant_reach_time"
                    android:layout_alignLeft="@id/contant_reach_time"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:text="尽快送达"
                    />
                <TextView
                    android:id="@+id/contant_produce_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/reach_time"
                    android:layout_alignBaseline="@id/contant_reach_time"
                    android:layout_marginLeft="20dp"
                    android:text="生产时效"
                    />
                <TextView
                    android:id="@+id/produce_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:36"
                    android:layout_alignLeft="@id/contant_produce_effect"
                    android:layout_alignBaseline="@id/reach_time"
                    android:textSize="22sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_background"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/contant_receiver_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货信息"
                    />
                <TextView
                    android:id="@+id/receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王晓霞"
                    android:textSize="18sp"
                    android:layout_below="@id/contant_receiver_info"
                    />
                <TextView
                    android:id="@+id/receiver_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18217131583"
                    android:layout_toRightOf="@id/receiver_name"
                    android:layout_alignBaseline="@id/receiver_name"
                    android:layout_marginLeft="8dp"
                    android:textSize="17sp"
                    />
                <TextView
                    android:id="@+id/receiver_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiver_name"
                    android:text="上海市徐汇区古美路1515号凤凰大楼1801"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                >
                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="#c0c0c0"
                    >

                </ScrollView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥200.00"
                        android:layout_toRightOf="@id/pay_way"
                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/contant_user_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户备注"
                    />
                <TextView
                    android:id="@+id/user_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="要一包糖，多加一根吸管"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/contant_csad_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服备注"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:id="@+id/csad_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="请尽快送到"
                    android:textSize="22sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产完成"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打印订单"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一单"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一单"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>