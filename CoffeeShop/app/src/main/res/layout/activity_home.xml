<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    >

    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:paddingRight="0dp"
        android:orientation="vertical"
        >
            <ImageView
                android:id="@+id/iv_barista_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_system"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />
            <RadioGroup
                android:id="@+id/group_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <com.lyancafe.coffeeshop.widget.LeftRadioButton
                    android:id="@+id/rb_orders"
                    style="@style/MyWidget.home.left_tab.btn"
                    android:checked="true"
                    android:drawableRight="@drawable/bg_left_tab_order"
                    />

                <com.lyancafe.coffeeshop.widget.LeftRadioButton
                    android:id="@+id/rb_order_query"
                    style="@style/MyWidget.home.left_tab.btn"
                    android:drawableRight="@drawable/bg_left_tab_search"
                    />

                <com.lyancafe.coffeeshop.widget.LeftRadioButton
                    android:id="@+id/rb_shop_manager"
                    style="@style/MyWidget.home.left_tab.btn"
                    android:drawableRight="@drawable/bg_left_tab_shop"

                     />

            </RadioGroup>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@mipmap/icon_setting"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

</LinearLayout>