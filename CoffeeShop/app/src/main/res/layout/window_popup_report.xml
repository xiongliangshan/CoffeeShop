<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white_font"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/report_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="2015102050331"
            />

        <TextView
            android:id="@+id/contant_report_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/report_order_id"
            android:layout_alignTop="@id/report_order_id"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:text="下单时间"
            />

        <TextView
            android:id="@+id/report_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contant_report_order_time"
            android:layout_alignLeft="@id/contant_report_order_time"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:text="2015-09-19 14:20"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="2"
        >

        <Spinner
            android:id="@+id/report_question_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            />

        <Spinner
            android:id="@+id/report_question_idea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="问题描述"/>

    <EditText
        android:id="@+id/report_order_description"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_background"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:maxHeight="300dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <Button
            android:id="@+id/report_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="@color/white_font"
            android:background="@drawable/bg_produce_btn"
            />

        <Button
            android:id="@+id/report_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消报告"
            android:background="@null"
            />
    </LinearLayout>
</LinearLayout>