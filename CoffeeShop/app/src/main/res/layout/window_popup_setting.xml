<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_font"
    android:padding="5dp"
    >


    <TextView
        android:id="@+id/contant_shop_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺状态"/>

    <RadioGroup
        android:id="@+id/status_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        >
        <RadioButton
            android:id="@+id/radio_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空闲"
            android:textColor="#28b332"
            android:layout_marginRight="2dp"
            />
        <RadioButton
            android:id="@+id/radio_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="繁忙"
            android:textColor="#FFD700"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <RadioButton
            android:id="@+id/radio_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停产"
            android:textColor="#e2435a"
            android:layout_marginLeft="2dp"
            />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="意见反馈"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#c7c7c7"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:background="@drawable/bg_produce_btn"
        />
</LinearLayout>