<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ltb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <com.lyancafe.coffeeshop.widget.ListTabButton
            android:id="@+id/rb_to_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ltb:ltb_text = "生成未完成"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            />
        <com.lyancafe.coffeeshop.widget.ListTabButton
            android:id="@+id/rb_have_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ltb:ltb_text = "生产已完成"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            />
        <com.lyancafe.coffeeshop.widget.ListTabButton
            android:id="@+id/rb_delivering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ltb:ltb_text = "配送中"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            />
        <com.lyancafe.coffeeshop.widget.ListTabButton
            android:id="@+id/rb_delivery_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ltb:ltb_text = "配送完成"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>
