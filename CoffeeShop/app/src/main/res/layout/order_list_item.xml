<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_order"
        android:descendantFocusability="blocksDescendants"
        >

        <LinearLayout
            android:id="@+id/ll_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="003约"
                />

            <TextView
                android:id="@+id/item_expected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:text="08:36"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="15sp"
                android:text="配送状态:"/>

            <TextView
                android:id="@+id/tv_deliver_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/font_black"
                android:layout_marginLeft="8dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <ImageView
                android:id="@+id/iv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/flag_reminder"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/iv_sao_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_reminder"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@mipmap/flag_sao"/>


            <ImageView
                android:id="@+id/item_remark_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/flag_bei"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_toRightOf="@id/iv_sao_flag"
                />


            <ImageView
                android:id="@+id/item_replenish_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_remark_flag"
                android:src="@mipmap/flag_replenish"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginLeft="4dp"/>


            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/eye"
                android:visibility="invisible"/>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_item_content_height"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/item_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/tv_cup_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text=""/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_twobtn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/item_produce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:text="生产完成"
                android:textSize="13sp"
                android:textColor="@color/white_font"
                android:background="@color/red1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_onebtn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@+id/item_produce_and_print"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="生产/打印"
                android:textSize="13sp"
                android:textColor="@color/white_font"
                android:background="@color/red1"
                />
        </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_select_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_select_mode">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:button="@drawable/bg_check"
                android:gravity="center"
                android:clickable="false"
                />

        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>